{
  "extends": "@tsconfig/svelte/tsconfig",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "sourceMap": true,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
        "@drivers*": ["src/drivers*"],
        "@stores*": ["src/stores*"],
        "@controllers*": ["src/controllers*"],
        "@presenters*": ["src/presenters*"],
        "@repositories*": ["src/repositories*"],
        "@usecases*": ["src/usecases*"],
        "@domains*": ["src/domains*"],
        "@container": ["src/container"]
    }
  }
}